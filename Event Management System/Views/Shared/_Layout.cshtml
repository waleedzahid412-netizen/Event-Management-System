<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Management System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Modern navbar styling */
        .navbar {
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background-color: #fff;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #333;
            transition: color 0.2s;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            padding: 1.5rem 0;
            text-align: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* Full-page login background */
        .login-bg {
            background: url('~/images/event-bg.jpg') no-repeat center center;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 2.5rem 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Customer"))
                    {
                        <a class="navbar-brand" asp-controller="Attendee" asp-action="Dashboard">
                            <img src="~/images/logo.png" alt="Event Management Logo" height="50" />
                        </a>
                    }
                    @if (User.IsInRole("Organizer"))
                    {
                        <a class="navbar-brand" asp-controller="Organizer" asp-action="Dashboard">
                            <img src="~/images/logo.png" alt="Event Management Logo" height="50" />
                        </a>
                        
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">
                            <img src="~/images/logo.png" alt="Event Management Logo" height="50" />
                        </a>

                    }


                }
                @if (User?.Identity?.IsAuthenticated == false)
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Event Management Logo" height="50" />
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Faq">FAQ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Careers">Careers</a></li>


                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Attendee" asp-action="ProfileInfo">MyProfile</a></li>
                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Attendee" asp-action="OrganizerRegistration">Host An Event</a></li>
                                
                            }
                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">logout</a></li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Body -->
    <main role="main" class="flex-fill">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        &copy; 2025 Event Management System | <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

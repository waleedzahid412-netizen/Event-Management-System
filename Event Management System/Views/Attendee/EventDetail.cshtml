@model Event_Management_System.DTOs.CustomerEventDetailsDTO
@{
    ViewData["Title"] = "Event Details";
}

<div class="container my-5 p-4 shadow rounded bg-light">
    <!-- Event Title -->
    <h1 class="mb-4 text-center fw-bold">@Model.Title</h1>

    <div class="row g-4">
        <!-- Left Column: Event Info -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <img src="@Model.CoverImageUrl" class="card-img-top" alt="@Model.Title" style="height:300px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Category:</strong> @Model.CategoryName</li>
                        <li class="list-group-item"><strong>Location:</strong> @Model.Location</li>
                        <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToString("MMM dd, yyyy")</li>
                        <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate.ToString("MMM dd, yyyy")</li>
                        <li class="list-group-item"><strong>Total Seats:</strong> @Model.TotalSeats</li>
                        <li class="list-group-item"><strong>Available Seats:</strong> @Model.AvailableSeats</li>
                    </ul>

                    <a asp-controller="Attendee" asp-action="RegisterEvent" asp-route-id="@Model.EventId" class="btn btn-primary btn-lg mt-3 w-100">
                        🎟 Register for Event
                    </a>
                </div>
            </div>
        </div>

        <!-- Right Column: Venue Images Carousel -->
        <div class="col-md-6">
            <h4 class="mb-3 text-center fw-bold">Venue Images</h4>

            @if (Model.VenueImages != null && Model.VenueImages.Any())
            {
                <div id="venueCarousel" class="carousel slide shadow-sm rounded" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.VenueImages.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.VenueImages[i]" class="d-block w-100 rounded" style="height:400px; object-fit:cover;" alt="Venue Image @i">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#venueCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#venueCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <p class="text-muted text-center">No venue images available.</p>
            }
        </div>
    </div>
</div>

<style>
    h1, h4 {
        color: #1a1a1a;
    }

    .card {
        border-radius: 15px;
    }

    .list-group-item {
        font-size: 0.95rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2575fc, #6a11cb);
        }

    #venueCarousel {
        background-color: #f8f9fa;
        padding: 10px;
    }

    .carousel-inner img {
        border-radius: 10px;
    }
</style>

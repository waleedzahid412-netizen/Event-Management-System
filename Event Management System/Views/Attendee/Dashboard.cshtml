@{
    ViewData["Title"] = "Attendee Dashboard";
    var CountofEventsAttended = ViewBag.CountofRegisteredEvents ?? 0;
    var CountofUpcomingEvents = ViewBag.CountofUpcomingEvents ?? 0;
}

<div class="dashboard-wrapper">
    <div class="container py-5">

        <!-- Welcome Section -->
        <div class="dashboard-header mb-5 p-5 rounded-4 shadow-lg position-relative overflow-hidden">
            <div class="header-content position-relative">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                    <div>
                        <h1 class="display-5 fw-bold mb-2 animate-slide-in">
                            Welcome back, @User.Identity.Name! 👋
                        </h1>
                        <p class="lead mb-0 opacity-90">
                            Your personal event management hub awaits
                        </p>
                    </div>
                    <div class="welcome-icon">
                        🎉
                    </div>
                </div>
            </div>
            <div class="header-decoration"></div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-6">
                <div class="card stat-card stat-card-primary shadow-sm border-0 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-2 text-uppercase small fw-semibold letter-spacing">
                                    Upcoming Events
                                </p>
                                <h2 class="display-4 fw-bold mb-0">@CountofUpcomingEvents</h2>
                                <p class="small text-muted mb-0 mt-2">
                                    <i class="bi bi-calendar-check"></i> Events you're registered for
                                </p>
                            </div>
                            <div class="stat-icon stat-icon-primary">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card stat-card stat-card-success shadow-sm border-0 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-2 text-uppercase small fw-semibold letter-spacing">
                                    Events Attended
                                </p>
                                <h2 class="display-4 fw-bold mb-0">@CountofEventsAttended</h2>
                                <p class="small text-muted mb-0 mt-2">
                                    <i class="bi bi-check-circle"></i> Total events completed
                                </p>
                            </div>
                            <div class="stat-icon stat-icon-success">
                                <i class="bi bi-trophy"></i>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 60%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Section -->
        <div class="section-title mb-4">
            <h3 class="fw-bold mb-2">
                <span class="title-icon">⚡</span> Quick Actions
            </h3>
            <p class="text-muted">Everything you need to manage your events</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card action-card action-card-primary shadow-hover border-0 h-100">
                    <div class="card-body p-4 text-center position-relative">
                        <div class="action-icon-wrapper mb-4">
                            <div class="icon-circle icon-circle-primary">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                        </div>
                        <h5 class="fw-bold mb-3">Browse Events</h5>
                        <p class="text-muted mb-4">
                            Discover amazing events happening near you and register with just a click
                        </p>
                        <a asp-controller="Attendee"
                           asp-action="BrowseEvents"
                           class="btn btn-primary btn-lg w-100 action-btn">
                            <i class="bi bi-search me-2"></i> Explore Events
                        </a>
                        <div class="card-decoration card-decoration-primary"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card action-card action-card-success shadow-hover border-0 h-100">
                    <div class="card-body p-4 text-center position-relative">
                        <div class="action-icon-wrapper mb-4">
                            <div class="icon-circle icon-circle-success">
                                <i class="bi bi-ticket-perforated"></i>
                            </div>
                        </div>
                        <h5 class="fw-bold mb-3">My Registrations</h5>
                        <p class="text-muted mb-4">
                            View all your registered events and manage your attendance
                        </p>
                        <a asp-controller="Attendee"
                           asp-action="AttendeeEvent"
                           class="btn btn-success btn-lg w-100 action-btn">
                            <i class="bi bi-list-check me-2"></i> View Registrations
                        </a>
                        <div class="card-decoration card-decoration-success"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card action-card action-card-info shadow-hover border-0 h-100">
                    <div class="card-body p-4 text-center position-relative">
                        <div class="action-icon-wrapper mb-4">
                            <div class="icon-circle icon-circle-info">
                                <i class="bi bi-person-gear"></i>
                            </div>
                        </div>
                        <h5 class="fw-bold mb-3">Edit Profile</h5>
                        <p class="text-muted mb-4">
                            Update your personal information and preferences
                        </p>
                        <a asp-controller="Profile"
                           asp-action="Edit"
                           class="btn btn-info btn-lg w-100 action-btn text-white">
                            <i class="bi bi-pencil-square me-2"></i> Update Profile
                        </a>
                        <div class="card-decoration card-decoration-info"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Info Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card info-banner border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="fw-bold mb-2">
                                    <i class="bi bi-lightbulb text-warning"></i> Pro Tip
                                </h5>
                                <p class="mb-0 text-muted">
                                    Stay updated with notifications for upcoming events and never miss out on exciting opportunities!
                                </p>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <button class="btn btn-outline-primary">
                                    <i class="bi bi-bell"></i> Enable Notifications
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .dashboard-wrapper {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slide-in {
        animation: slideIn 0.6s ease-out;
    }

    /* Dashboard Header */
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
    }

    .header-content {
        z-index: 2;
    }

    .header-decoration {
        position: absolute;
        top: -50px;
        right: -50px;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        z-index: 1;
    }

    .welcome-icon {
        font-size: 4rem;
        animation: bounce 2s infinite;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* Section Title */
    .section-title {
        position: relative;
        padding-left: 20px;
        border-left: 4px solid #667eea;
    }

    .title-icon {
        font-size: 1.5rem;
        display: inline-block;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    .letter-spacing {
        letter-spacing: 1px;
    }

    /* Stat Cards */
    .stat-card {
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        position: relative;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            transition: height 0.3s ease;
        }

    .stat-card-primary::before {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .stat-card-success::before {
        background: linear-gradient(90deg, #11998e 0%, #38ef7d 100%);
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }

        .stat-card:hover::before {
            height: 8px;
        }

    .stat-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        position: relative;
    }

        .stat-icon::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 20px;
            opacity: 0.1;
        }

    .stat-icon-primary {
        color: #667eea;
    }

        .stat-icon-primary::before {
            background: #667eea;
        }

    .stat-icon-success {
        color: #28a745;
    }

        .stat-icon-success::before {
            background: #28a745;
        }

    /* Action Cards */
    .action-card {
        border-radius: 24px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        overflow: hidden;
    }

    .shadow-hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .action-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0,0,0,0.15) !important;
    }

    .card-decoration {
        position: absolute;
        bottom: -30px;
        right: -30px;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        opacity: 0.05;
        transition: all 0.4s ease;
    }

    .card-decoration-primary {
        background: #667eea;
    }

    .card-decoration-success {
        background: #28a745;
    }

    .card-decoration-info {
        background: #17a2b8;
    }

    .action-card:hover .card-decoration {
        transform: scale(1.5);
        opacity: 0.1;
    }

    /* Icon Circles */
    .action-icon-wrapper {
        position: relative;
        display: inline-block;
    }

    .icon-circle {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        margin: auto;
        position: relative;
        transition: all 0.4s ease;
    }

    .action-card:hover .icon-circle {
        transform: rotateY(360deg);
    }

    .icon-circle-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .icon-circle-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        box-shadow: 0 10px 30px rgba(17, 153, 142, 0.3);
    }

    .icon-circle-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        box-shadow: 0 10px 30px rgba(79, 172, 254, 0.3);
    }

    /* Buttons */
    .action-btn {
        border-radius: 12px;
        font-weight: 600;
        padding: 14px 24px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        border: none;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a3f8f 100%);
        }

    .btn-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #0e867b 0%, #2fd66a 100%);
        }

    .btn-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #3d96e8 0%, #00d9e8 100%);
        }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        position: relative;
    }

        .info-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="white" opacity="0.1"/></svg>') repeat;
            opacity: 0.3;
        }

    .btn-outline-primary {
        border: 2px solid #667eea;
        color: #667eea;
        font-weight: 600;
        border-radius: 12px;
        padding: 10px 24px;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

    /* Progress Bars */
    .progress {
        background-color: rgba(0,0,0,0.05);
        border-radius: 10px;
    }

    .progress-bar {
        border-radius: 10px;
        transition: width 1s ease;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .dashboard-header h1 {
            font-size: 1.75rem;
        }

        .dashboard-header p {
            font-size: 1rem;
        }

        .welcome-icon {
            font-size: 2.5rem;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .icon-circle {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }
    }
</style>
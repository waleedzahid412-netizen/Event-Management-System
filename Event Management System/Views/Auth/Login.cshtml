@model Event_Management_System.DTOs.LoginViewDTO
@{
    ViewData["Title"] = "Login";
}

<div class="login-page d-flex justify-content-center align-items-center min-vh-100"
     style="background: url('~/images/event-bg.jpg') center/cover no-repeat; position: relative;">

    <!-- Optional dark overlay for better contrast -->
    <div style="position:absolute; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.4); z-index:1;"></div>

    <div class="login-card p-5 rounded-4 shadow-sm text-center"
         style="position: relative; z-index:2; max-width: 400px; background-color: rgba(255,255,255,0.95);">
        <h2 class="fw-bold mb-4">Welcome Back!</h2>

        <form asp-action="Login" method="post" class="d-flex flex-column gap-3">
            <div class="form-group text-start">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control rounded-3" placeholder="Enter your name" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group text-start">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg rounded-3 w-100 mt-3">Login</button>
        </form>

        <p class="text-muted mt-4 mb-2">Or log in with</p>
        <div class="d-flex justify-content-center gap-2">
            <a href="#!" class="btn btn-outline-dark btn-sm d-flex align-items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                </svg>
                Google
            </a>
        </div>
    </div>
</div>

<style>
    .login-page .login-card .form-control:focus {
        box-shadow: 0 0 5px rgba(0,123,255,0.5);
        border-color: #007bff;
    }
</style>
